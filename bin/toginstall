#!/bin/bash

projdir="$1"

if [ "$projdir" == "--help" ]
then
    echo "Usage: toginstall {proj/Foo}"
    exit 0
fi

if [ -z "$projdir" ]
then
    echo "Usage: toginstall {proj/Foo}"
    exit 1
fi

mkdir -p "$HOME/$projdir" && cd "$HOME/$projdir"
gitinittog --name "TOGoS/$projdir"
gitpull
make && make install
