#!/bin/bash

projdir="$1"

if [ "$projdir" == "--help" ]
then
    echo "Usage: toginstall {proj/Foo}"
    exit 0
fi

if [ -z "$projdir" ]
then
    echo "Usage: toginstall {proj/Foo}"
    exit 1
fi

if [[ "$projdir" =~ ^(TOGoS|EarthIT)/(.*)$ ]]
then
    projname="$projdir"
    projdir="${BASH_REMATCH[2]}"
else
    projname="TOGoS/${projdir}"
fi

mkdir -p "$HOME/$projdir" && cd "$HOME/${projdir}"
gitinittog --name "${projname}"
gitpull
make && make install
